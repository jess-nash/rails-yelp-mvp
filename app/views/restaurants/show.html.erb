<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="banner mb-2" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4));">
        <div class="container">
          <h1><%= @restaurant.name %></h1>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <p><%= @restaurant.address %></p>
          <p><%= @restaurant.category %></p>
          <p><%= @restaurant.phone_number %></p>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <h2>Reviews:</h2>
          <ul class="list-group">
            <% @restaurant.reviews.each do |review| %>
              <li class="list-group-item"><%= review.rating %></li>
              <li class="list-group-item"><%= review.content %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <br>
      <div class="container">
        <div class="row">
          <div class="col-8">
            <%= link_to 'Back', restaurants_path %> |
            <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
